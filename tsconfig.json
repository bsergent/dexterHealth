{
  "compilerOptions": {
    "target": "es6",
    "module": "system",
    "moduleResolution": "node",
    "outFile": "dist/build.js",
    /*"outDir": "./dist/",*/
    "sourceMap": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "allowJs": false,
    "removeComments": true,
    "watch": true,
    "typeRoots": [
      "./node_modules/@types/"
    ],
    "allowSyntheticDefaultImports": true
  },
  "compileOnSave": true,
  "include": [
    "src/**/*"
  ]
}